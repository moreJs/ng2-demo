{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ]
}




